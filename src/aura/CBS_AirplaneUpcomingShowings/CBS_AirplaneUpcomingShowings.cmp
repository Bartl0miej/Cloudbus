<aura:component description="CBS_AirplaneUpcomingShowings" controller="CBS_AirplaneShowingsController" implements="forceCommunity:availableForAllPageTypes" access="global">
    <aura:attribute name="upcomingShowings" type="List" default="[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>
    <aura:handler event="c:CBS_AirplaneShowingsAddedEvent" action="{!c.onInit}"/>
    <c:TMU_Spinner aura:id="spinner"/>
    <lightning:card title="{!$Label.c.CBS_Upcoming_Showings}" iconName="utility:event">
        <aura:if isTrue="{!v.upcomingShowings.length > 0}">
            <div class="slds">
                <table data-reactroot="" class="slds-table slds-table_bordered slds-table_cell-buffer">
                    <thead>
                    <tr class="slds-text-title_caps">
                        <th scope="col">
                            <div class="slds-truncate" title="{!$Label.c.CBS_Showing}">{!$Label.c.CBS_Showing}</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="{!$Label.c.CBS_Showing_Date}">{!$Label.c.CBS_Showing_Date}</div>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <aura:iteration items="{!v.upcomingShowings}" var="row" indexVar="index">
                        <c:CBS_AirplaneUpcomingShowingsRow upcomingShowing="{!row}"/>
                    </aura:iteration>
                    </tbody>
                </table>
            </div>
        </aura:if>
        <aura:if isTrue="{!v.upcomingShowings.length == 0}">
            <ui:outputText value="{!$Label.c.CBS_You_do_not_have_any_upcoming_showings_yet}" class="slds-align_absolute-center"/>
        </aura:if>
    </lightning:card>
</aura:component>
