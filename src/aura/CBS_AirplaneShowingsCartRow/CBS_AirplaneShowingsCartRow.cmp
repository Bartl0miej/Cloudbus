<aura:component description="CBS_AirplaneShowingsCartRow">
    <aura:attribute access="PUBLIC" name="tShowing" type="Object"/>
    <aura:attribute name="tIndex" type="Integer"/>
    <aura:registerEvent name="CBS_AirplaneShowingRemovedFromList" type="c:CBS_AirplaneShowingRemovedFromList"/>
    <tr>
        <th scope="row">
            <div class="slds-truncate">{!v.tShowing.thePlane.Name}</div>
        </th>
        <td>
            <div style="width: 120px;" class="slds-truncate"
                 title="{!v.tShowing.thePlane.Hangar__r.Name + ' - ' + v.tShowing.thePlane.Hangar__r.City__c + ', ' + v.tShowing.thePlane.Hangar__r.Country__c}">
            {!v.tShowing.thePlane.Hangar__r.Name} - {!v.tShowing.thePlane.Hangar__r.City__c}
                , {!v.tShowing.thePlane.Hangar__r.Country__c}
            </div>
        </td>
        <td>
            <div class="slds-truncate">
                <ui:outputDateTime value="{!v.tShowing.dTI}" format="HH:mm dd/MM/yyyy"/>
            </div>
        </td>
        <td>
            <div class="slds-truncate slds-align_absolute-center">
                <button onclick="{!c.callDeleteShowing}" class="slds-button slds-button_icon"
                        title="{!$Label.c.CBS_Delete_from_requested_showings_list}">
                    <lightning:icon iconName="utility:close" size="xx-small"
                                    alternativeText="{!$Label.c.CBS_Delete_from_requested_showings_list}"/>
                    <span class="slds-assistive-text">{!$Label.c.CBS_Delete_from_requested_showings_list}</span>
                </button>
            </div>
        </td>
    </tr>
</aura:component>
