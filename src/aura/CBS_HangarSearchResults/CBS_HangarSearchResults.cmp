<aura:component description="CBS_HangarSearchResults">
    <aura:attribute name="hangars" type="CBS_Hangar__c[]"/>
    <aura:attribute name="selectedItemId" type="Id" default=""/>
    <!--<aura:handler name="change" value="{!v.hangars}" action="{!c.hangarsChangeHandler}"/>-->
    <lightning:card title="Hangars">
        <p class="slds-p-horizontal--small">
        <table class="slds-table slds-table_bordered slds-table_cell-buffer">
            <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Country
                </th>
                <th>
                    City
                </th>
            </tr>
            </thead>
            <tbody>
               <!-- <aura:iteration items="{!v.hangars}" var="sHangar" indexVar="index">-->
                    <!--<li>
                    {!index} : <c:CBS_HangarItem hangar="{!sHangar}" isActive="{!sHangar.Id == selectedItemId}"/>
                    </li>-->
                    <ul>
                        <aura:iteration items="{!v.hangars}" var="sHangar" indexVar="index">
                            <li aura:id="listItem" data-id="{!indx}" onclick="{!c.addClass}">
                                <c:CBS_HangarItem hangar="{!v.sHangar}"/>
                            </li>
                        </aura:iteration>
                    </ul>

<!--                </aura:iteration>-->
            </tbody>
        </table>
        </p>
    </lightning:card>
</aura:component>