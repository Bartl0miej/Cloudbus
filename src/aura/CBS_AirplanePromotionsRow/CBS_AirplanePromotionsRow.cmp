<aura:component description="CBS_AirplanePromotionsRow">
    <aura:attribute name="tPBEntrty" type="Object"/>
    <aura:attribute name="tIndex" type="Integer"/>
    <aura:attribute name="toDelete" type="Boolean" default="false"/>
    <aura:registerEvent name="CBS_AirplaneAddPromotionToDeleteList" type="c:CBS_AirplaneAddPromotionToDeleteList"/>
    <aura:if isTrue="{!!v.toDelete}">
        <tr>
            <th scope="row" data-label="Price">
                <div class="slds-truncate">
                    <ui:outputCurrency value="{!v.tPBEntrty.UnitPrice}" currencySymbol="â‚¬"/>
                </div>
            </th>
            <td data-label="Promotion start date">
                <div class="slds-truncate">
                    <ui:outputDate value="{!v.tPBEntrty.Pricebook2.Promotion_start__c}" format="dd/MM/yyyy"/>
                </div>
            </td>
            <td data-label="Promotion end date" align="center">
                <div class="slds-truncate">
                    <ui:outputDate value="{!v.tPBEntrty.Pricebook2.Promotion_end__c}" format="dd/MM/yyyy"/>
                </div>
            </td>
            <td data-label="Created by">
                <div class="slds-truncate">
                    <p>{!v.tPBEntrty.CreatedBy.Name}</p>
                </div>
            </td>
            <td data-label="">
                <div class="slds-truncate slds-align_absolute-center">
                    <button onclick="{!c.callDeletePromotion}" class="slds-button slds-button_icon"
                            style="margin-left: -50px !important;"
                            title="Delete promotion">
                        <lightning:icon iconName="action:delete" size="xx-small"
                                        alternativeText="Delete promotion"/>
                        <span class="slds-assistive-text">Delete promotion</span>
                    </button>
                </div>
            </td>
        </tr>
    </aura:if>
</aura:component>
