<aura:component description="CBS_AirplaneUpcomingShowingsRow" controller="CBS_AirplaneController">
    <aura:attribute name="view" type="Object"/>
    <aura:attribute name="suggestedPrice" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>
    <tr>
        <th scope="row" data-label="Showing">
            <div style="width: 278px;" class="slds-truncate"
                 title="{!'For ' + v.view.Airplane_Type__r.Name + ' in hangar ' + v.view.Hangar__r.Name + ', price: $' + v.suggestedPrice + '.'}">
                For&nbsp;<a onclick="{!c.onAirplaneClick}">{!v.view.Airplane_Type__r.Name}</a> in
                hangar&nbsp;{!v.view.Hangar__r.Name}, price: <ui:outputCurrency value="{!v.view.Airplane_Type__r.Price_after_Discount__c}" currencySymbol="$"/>.
            </div>
        </th>
        <td data-label="Showing date">
            <div class="slds-truncate">
                <ui:outputDateTime value="{!v.view.ActivityDateTime}" format="HH:mm dd/MM/yyyy"/>
            </div>
        </td>
    </tr>
</aura:component>
