<aura:component description="CBS_AirplaneShowingsCart" controller="CBS_AirplaneShowingsController"
                implements="forceCommunity:availableForAllPageTypes" access="global">
    <aura:attribute name="showings" type="List" default="[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>
    <aura:handler event="c:CBS_AirplaneAddShowingEvent" action="{!c.onAddShowingEvent}"/>
    <aura:handler name="CBS_AirplaneShowingRemovedFromList" event="c:CBS_AirplaneShowingRemovedFromList"
                  action="{!c.onShowingRemove}"/>
    <aura:registerEvent name="CBS_AirplaneShowingsAddedEvent" type="c:CBS_AirplaneShowingsAddedEvent"/>
    <c:TMU_Spinner aura:id="spinner"/>
    <lightning:card title="{!$Label.c.CBS_Request_for_showings}" iconName="utility:event">
        <aura:if isTrue="{!v.showings.length > 0}">
            <div class="slds">
                <table data-reactroot="" class="slds-table slds-table_bordered slds-table_cell-buffer">
                    <thead>
                    <tr class="slds-text-title_caps">
                        <th scope="col">
                            <div class="slds-truncate" title="{!$Label.c.CBS_Airplane}">{!$Label.c.CBS_Airplane}</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="{!$Label.c.CBS_Hangar}">{!$Label.c.CBS_Hangar}</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="{!$Label.c.CBS_Showing_Date}">{!$Label.c.CBS_Showing_Date}</div>
                        </th>
                        <th scope="col">
                            <div class="slds-truncate" title="{!$Label.c.CBS_Action}">{!$Label.c.CBS_Action}</div>
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    <aura:iteration items="{!v.showings}" var="row" indexVar="index">
                        <c:CBS_AirplaneShowingsCartRow tShowing="{!row}" tIndex="{!index}"/>
                    </aura:iteration>
                    </tbody>
                </table>
                <div>
                    <div align="right" class="slds-m-top--small slds-m-right_small">
                        <lightning:button label="{!$Label.c.CBS_Clear}" variant="neutral" onclick="{!c.clearAllShowings}"/>
                        <lightning:button label="{!$Label.c.CBS_Request_all}" variant="brand" onclick="{!c.createShowingsEvent}"/>
                    </div>
                </div>
            </div>
        </aura:if>
        <aura:if isTrue="{!v.showings.length == 0}">
            <ui:outputText value="{!$Label.c.CBS_There_are_no_showings_to_request_for_yet}" class="slds-align_absolute-center"/>
        </aura:if>
    </lightning:card>
</aura:component>
